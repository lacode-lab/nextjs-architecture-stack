{
  "extends": [
    "next/core-web-vitals",
     "next/typescript",
    "next/core-web-vitals",
    "plugin:prettier/recommended" // Prettier 推奨設定
],
  "rules": {
    // カスタムルールをここに追加
    "no-unused-vars": "off",  // 未使用変数のチェックを無効化

    "semi": ["error", "never"], // セミコロンを禁止する
    "@typescript-eslint/no-unused-vars": "off",
    "prettier/prettier": ["error", { "semi": false }] // Prettier ルールを合わせる
  }
}
